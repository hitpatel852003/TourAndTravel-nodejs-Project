    .attractions-container h2 {
      margin-bottom: 20px;
      font-size: 22px;
    }

    .cards {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .card {
      width: calc(25% - 15px);
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      overflow: hidden;
      transition: transform 0.3s ease;
      display: none;
      /* Hidden by default */
    }

    .card.visible {
      display: block;
    }

    .card img {
      width: 100%;
      height: 140px;
      object-fit: cover;
      border-bottom: 1px solid #eee;
    }

    .card-body {
      padding: 12px;
    }

    .card-body h4 {
      margin: 0;
      font-size: 16px;
      font-weight: 600;
    }

    .card-body p {
      margin: 4px 0 0;
      color: #555;
      font-size: 13px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .load-more {
      text-align: center;
      margin-top: 24px;
    }

    .load-more button {
      padding: 10px 24px;
      border: 1px solid #aaa;
      background: #fff;
      color: #333;
      border-radius: 8px;
      cursor: pointer;
      font-size: 14px;
    }

    .load-more button:hover {
      background-color: #f0f0f0;
    }

    @media (max-width: 768px) {
      .card {
        width: calc(50% - 10px);
      }
    }

    @media (max-width: 480px) {
      .card {
        width: 100%;
      }
    }

    /* ===== Responsive Enhancements ===== */

    @media (max-width: 992px) {
      body {
        padding: 20px;
      }

      .photo-grid {
        flex-direction: column;
        width: 100%;
        height: auto;
      }

      .package-container,
      .stay-container,
      .inclusions-box,
      .itinerary-container,
      .tour-sidebar,
      .attractions-container {
        margin-left: auto;
        margin-right: auto;
        padding: 0 20px;
        max-width: 100%;
      }

      .side-grid {
        grid-template-columns: 1fr 1fr;
        gap: 10px;
      }

      .package-features {
        grid-template-columns: 1fr;
      }

      .hotel-box {
        flex-direction: column;
      }

      .hotel-image,
      .hotel-info {
        width: 100%;
      }

      .tags {
        flex-wrap: wrap;
        gap: 8px;
      }

      .title {
        font-size: clamp(20px, 4vw, 24px);
      }

      .from,
      .feature,
      .tour-package-info {
        font-size: clamp(12px, 3vw, 15px);
      }
    }

    @media (max-width: 600px) {
      .tabs {
        flex-wrap: wrap;
        gap: 8px;
      }

      .tab {
        font-size: 13px;
        padding: 8px 14px;
      }

      .day-title {
        font-size: 14px;
      }

      .inclusions-grid {
        grid-template-columns: 1fr;
      }

      .tour-btn-enquiry {
        font-size: 14px;
        padding: 8px 16px;
      }

      .card {
        width: 100% !important;
      }

      .cards {
        gap: 14px;
      }

      .attractions-container h2 {
        font-size: 18px;
      }

      .card-body h4 {
        font-size: 14px;
      }

      .card-body p {
        font-size: 12px;
      }
    }
  </style>
</head>

