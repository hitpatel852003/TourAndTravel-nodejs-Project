<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css?family=Work+Sans:400,700,900&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="fonts/icomoon/style.css">

  <link rel="stylesheet" href="css/bootstrap.min.css">
  <link rel="stylesheet" href="css/bootstrap-datepicker.css">
  <link rel="stylesheet" href="css/jquery.fancybox.min.css">
  <link rel="stylesheet" href="css/owl.carousel.min.css">
  <link rel="stylesheet" href="css/owl.theme.default.min.css">
  <link rel="stylesheet" href="fonts/flaticon/font/flaticon.css">
  <link rel="stylesheet" href="css/aos.css">

  <!-- MAIN CSS -->
  <link rel="stylesheet" href="css/style.css">

  <title>Tour Packages</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      background-color: #fff;
    }

    /* === Title Section === */
    .section-title {
      position: relative;
      text-align: center;
      margin-top: 60px;
      margin-bottom: 40px;
    }

    .bg-text {
      font-size: 100px;
      font-weight: 900;
      color: rgba(0, 0, 0, 0.05);
      position: absolute;
      top: -30px;
      left: 50%;
      transform: translateX(-50%);
      z-index: 0;
      pointer-events: none;
    }

    .sub-text {
      color: #f5a623;
      font-weight: bold;
      font-size: 14px;
      letter-spacing: 1px;
      position: relative;
      z-index: 1;
    }

    .main-text {
      font-size: 24px;
      font-weight: 400;
      color: #000;
      position: relative;
      z-index: 1;
      margin-top: 5px;
    }

    /* === Card Grid Section === */
    .card-container {
      display: flex;
      justify-content: center;
      gap: 30px;
      flex-wrap: wrap;
      padding: 20px 40px;
    }

    .card {
      background: white;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      width: 300px;
      display: flex;
      flex-direction: column;
    }

    .card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }

    .card-content {
      padding: 16px;
    }

    .card-content p {
      margin: 0;
      color: #888;
      font-size: 14px;
    }

    .card-content h3 {
      margin: 5px 0;
      font-size: 18px;
    }

    .card-content .sub {
      color: #444;
      margin-bottom: 8px;
      font-size: 14px;
    }

    .tags {
      display: flex;
      gap: 8px;
      margin-bottom: 8px;
      flex-wrap: wrap;
    }

    .tag {
      font-size: 12px;
      padding: 4px 8px;
      border-radius: 12px;
      display: flex;
      align-items: center;
    }

    .tag.early {
      background: #eaf3ff;
      color: #007aff;
      border: 1px solid #007aff;
    }

    .tag.save {
      background: #e6ffe6;
      color: #2e7d32;
      border: 1px solid #2e7d32;
    }

    .price {
      font-size: 18px;
      color: #d32f2f;
      font-weight: bold;
    }

    .old-price {
      text-decoration: line-through;
      color: #999;
      margin-left: 8px;
      font-size: 14px;
    }

    @media (max-width: 768px) {
      .card-container {
        padding: 20px;
      }
    }

    .price-button {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
}

.book-btn {
  background-color: #f5a623;
  color: white;
  padding: 6px 12px;
  border-radius: 4px;
  text-decoration: none;
  font-weight: 500;
  transition: background 0.3s;
}

.book-btn:hover {
  background-color: #d48c1c;
}

  </style>
</head>

<body>
    <div class="section-title">
      <div class="bg-text">Package</div>
      <div class="sub-text">Package</div>
      <div class="main-text">
        <h3>
          <%= tour.title %>
        </h3>
      </div>
    </div>

    <div class="card-container">
      <% tour.packages.forEach(pkg=> { %>
        <div class="card">
          <img src="<%= pkg.image %>" alt="Ladakh Highlights">
          <div class="card-content">
            <div class="duration">
              <%= pkg.days %>
            </div>
            <div class="package-title">
              <%= pkg.name %>
            </div>
            <div class="package-subtitle">
              <%= pkg.details %>
            </div>
            <div class="tags">
              <div class="tag">üéÅ Early Bird Offer</div>
              <div class="tag green">‚úÖ Save 4,700</div>
            </div>
            <div class="price price-button">
              <span class="new">‚Çπ<%= pkg.price %></span>
              <!-- <span class="old">‚Çπ 20,650</span> -->
                 <a href="/book-now/<%= pkg.id %>" class="book-btn">Book Now</a>
            </div>
          </div>
        </div>
        <% }) %>
    </div>

      <script src="js/jquery-3.3.1.min.js"></script>
      <script src="js/jquery-migrate-3.0.0.js"></script>
      <script src="js/popper.min.js"></script>
      <script src="js/bootstrap.min.js"></script>
      <script src="js/owl.carousel.min.js"></script>
      <script src="js/jquery.sticky.js"></script>
      <script src="js/jquery.waypoints.min.js"></script>
      <script src="js/jquery.animateNumber.min.js"></script>
      <script src="js/jquery.fancybox.min.js"></script>
      <script src="js/jquery.stellar.min.js"></script>
      <script src="js/jquery.easing.1.3.js"></script>
      <script src="js/bootstrap-datepicker.min.js"></script>
      <script src="js/isotope.pkgd.min.js"></script>
      <script src="js/aos.js"></script>

      <script src="js/main.js"></script>
</body>

</html>